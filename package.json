{
  "name": "sport-tg-bot",
  "version": "1.0.0",
  "description": "A Telegram bot for logging sports workouts with TypeScript, Telegraf, and Prisma",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "vercel-build": "npm run build && npm run db:generate",
    "setup-webhook": "node scripts/setup-webhook.js"
  },
  "keywords": ["telegram", "bot", "sports", "typescript", "telegraf", "prisma"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "telegraf": "^4.15.6",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "dotenv": "^16.3.1",
    "vercel": "^33.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@vercel/node": "^3.0.0",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 